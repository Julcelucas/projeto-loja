<main>
  <div class="auth-page">
    <div class="login-container d-flex align-items-center justify-content-center">
      <div class="login-card shadow-lg">
        <div class="user-icon text-center mb-4">
          <span class="material-icons log-icon">person_add</span>
        </div>
        <div class="text-center mb-4">
          <h1 class="mb-2">Crie sua conta</h1>
          <p class="text-muted">Preencha os campos abaixo</p>
        </div>

        {{> mensagens}}

        <form action="/registrar" method="POST">
          <div class="form-group">
            <div class="input-icon">
              <i class="fa fa-user"></i>
              <input type="text" name="nome" class="form-control" placeholder="Nome completo">
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fa fa-envelope"></i>
              <input type="text" name="email" class="form-control" placeholder="Email">
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              <input type="password" name="senha" class="form-control" placeholder="Senha" autocomplete="new-password">
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              <input type="password" name="confirmar" class="form-control" placeholder="Confirme a senha" autocomplete="new-password">
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fa fa-key"></i>
              <input type="text" name="codigoSecreto" class="form-control" placeholder="Código secreto">
            </div>
          </div>

          <button type="submit" class="btn btn-gradient btn-block">Registrar</button>
        </form>
        <hr>
        <p class="text-center">Já tem conta? <a href="/login" class="text-primary">Entre aqui</a></p>
      </div>
    </div>
  </div>
</main>
