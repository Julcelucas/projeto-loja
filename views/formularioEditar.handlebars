
<main>

    {{!-- Formulario --}}
    <div class="container" id="formularioEditar">
        <div class="row">
            {{!-- Por padrao o bootstrap trabalha com ate 12 colunas 3 x 4 = 12(se tiverem 4 col-3) --}}
            <div class="col-6 offset-3">
                {{> mensagens }}
                <form action="/editar" method="post" enctype="multipart/form-data">

                    <img src="../imagens/{{produto.imagem}}">

                    <input type="hidden" name="nomeImagem" value="{{produto.imagem}}">

                    <input type="hidden" name="codigo" value="{{produto.codigo}}">
                    <input type="text" name="nome" value="{{produto.nome}}" class="form-control" placeholder="Nome do Produto">
                    <input type="number" name="valor" value="{{produto.valor}}" class="form-control" placeholder="Valor do Produto">
                    <input type="file" name="imagem" class="form-control">
                    <select name="categoria" class="form-control">
                        <option value="">Categoria do produto</option>
                        <option value="alimenticio">Alimentício</option>
                        <option value="eletronico">Eletrônico</option>
                        <option value="vestuario">Vestuário</option>
                    </select>
                    <input type="submit" class="btn btn-primary" value="Editar">
                    <a href="/cadastro" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>

</main>