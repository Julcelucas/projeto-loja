<main>
  <div class="auth-page">
    <div class="login-container d-flex align-items-center justify-content-center">
      <div class="login-card shadow-lg">

        <div class="user-icon text-center mb-4">
          <span class="material-icons log-icon"><a href="/">person</a></span>
        </div>

        <div class="text-center mb-4">
          <h1 class="mb-2">Bem-vindo!</h1>
          <p class="text-muted">Entre na sua conta</p>
        </div>

        {{> mensagens}}

        <form action="/login" method="POST">
          <div class="form-group">
            <div class="input-icon">
              <i class="fa fa-user"></i>
              <input type="text" name="username" class="form-control" placeholder="Nome de usuário">
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              <input type="password" name="senha" class="form-control" placeholder="Senha" autocomplete="new-password">
            </div>
          </div>

          <div class="form-group d-flex justify-content-between align-items-center">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="rememberMe">
              <label class="custom-control-label" for="rememberMe">Lembrar-me</label>
            </div>
            <a href="/esqueceu-senha" class="text-primary">Esqueceu a senha?</a>
          </div>

          <button type="submit" class="btn btn-gradient btn-block">Entrar</button>
        </form>

        <hr>
        <p class="text-center">Não tem conta? <a href="/registrar" class="text-primary">Registrar-se</a></p>
      </div>
    </div>
  </div>
</main>
